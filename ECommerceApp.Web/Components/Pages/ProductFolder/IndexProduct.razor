@page "/product"
@using ECommerceApp.Web.Components.BaseComponent;
@inject NavigationManager NavigationManager

<h3>Product</h3>

@if (Products == null || !Products.Any())
{
    <p>Loading or no products available...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price.ToString("C", new System.Globalization.CultureInfo("en-NG"))</td>
                </tr>
            }
        </tbody>
    </table>
}

